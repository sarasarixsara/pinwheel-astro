---
import linkItem from "./linkItem";
import { markdownify } from "@/lib/utils/textConverter";

const { linkGroup } = Astro.props;
const { title, title_suffix, FAQ } = linkGroup;
---

<section >
      <div class="col-lg-8 mx-auto">
          <h2 set:html={markdownify(title)}>
             <span set:html={markdownify(title_suffix)}></span>
          </h2>
      </div>
  
    <div class="row">
      <div class="col-lg-12">
        <div class="accordion" id="accordionExample">
            hola
          {FAQ.map((q:any, i:any) => (
           
            <linkItem faq={q} i={i} key={i} />
          ))}
        </div>
      </div>
    </div>
 
</section>
