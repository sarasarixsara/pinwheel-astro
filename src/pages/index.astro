---
import Base from "@/layouts/Base.astro";
import Banner from "@/layouts/components/Banner.astro";
import KeyFeatures from "@/layouts/components/KeyFeatures.astro";
import Testimonial from "@/layouts/components/Testimonial.astro";
import Service from "@/layouts/components/Service.astro";
import Cta from "@/layouts/partials/Cta.astro";
import { getEntryBySlug } from "astro:content";
import LinkGroup from "@/components/links/LinkGroup";
import CounterComponent from "@/components/about/CounterComponent.astro";
import HomepageTab from "@/layouts/function-components/HomepageTab";
import CareerBenifits from "@/layouts/function-components/CareerBenifits";


const homepage = await getEntryBySlug("homepage", "index");
const { banner, key_features, homepage_tab, testimonial, counter, benifits } = homepage.data;
---

<Base>
  <!-- banner -->
  <Banner banner={banner} />
  <CounterComponent counter={counter} />
  
  <!-- key features -->
  <HomepageTab client:load homepage_tab={homepage_tab} />
  <CareerBenifits client:load benifits={benifits} />
  <LinkGroup client:load data={homepage.data} />
  <!-- <KeyFeatures key_features={key_features} /> -->

  <!-- service -->
  <!-- <Service service={service} /> -->
  <!-- testimonial -->
  <!-- <Testimonial testimonial={testimonial} /> -->
  <!-- call to action -->
  <Cta />
</Base>
